<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@mipmap/ic_launcher_round"
            android:layout_width="110dp"
            android:layout_height="110dp"
            style="@style/Widget.MaterialComponents.CardView"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_title"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"
            app:layout_constraintLeft_toRightOf="@+id/item_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textSize="12sp"
            tools:text="Set de herramientas Manuales Klatter-122 Piezas"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_price"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            app:layout_constraintLeft_toLeftOf="@+id/item_title"
            app:layout_constraintRight_toRightOf="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="$ 2159"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_shipping"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_price"
            app:layout_constraintLeft_toLeftOf="@+id/item_title"
            app:layout_constraintRight_toRightOf="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/free_ship"
            android:textColor="@color/green_free"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>